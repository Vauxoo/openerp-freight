<openerp>
    <data>
    
        <record model="ir.ui.view" id="view_fleet_expiring_parts_form_inherit">
            <field name="name">fleet.vehicle.expiring.parts.form.inherit</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet_special_equipment.view_fleet_vehicle_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page[@string='Equipment']" position="after">
                    
                        <page string="Expiring Spare Parts">
                            <field name="service_expiring_ids" >
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="based"/>
                                    <field name="date" attrs="{'readonly':[('based','=','km')]}"/>
                                    <field name="kilometers" attrs="{'readonly':[('based','=','date')]}"/>
                                </tree>
                            </field>
                        </page>
                </xpath>
            </field>
        </record>   
        
        
    </data>
</openerp>
