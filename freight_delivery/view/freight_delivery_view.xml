<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="fleet_vehicle_form_inherit">
            <field name="name">fleet.vehicle.form</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group col="2" string="Transport unit">
                        <group>
                            <field name="type" required="True"/> 
                            <field name="physical_capacity" attrs="{'required': [('type','=','freight')], 'invisible': [('type','in',('automobile', 'delivery'))]}"/> 
                            <field name="volumetric_capacity" attrs="{'required': [('type','=','freight')], 'invisible': [('type','in',('automobile', 'delivery'))]}"/> 
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
        
    </data>
</openerp>
