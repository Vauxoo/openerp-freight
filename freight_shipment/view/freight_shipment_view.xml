<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="freight_shipment_form" model="ir.ui.view">
            <field name="name">Fleet Shipment Form</field>
            <field name="model">freight.shipment</field>
            <field name="arch" type="xml">
                <form string="Fleet Shipment" version="7.0">
                    <header>
                        <button 
                            name="action_prepare"
                            type="object"
                            string="Prepare"
                            states="draft"
                            class="oe_highlight"/>
                        <button name="action_assign" type="object" string="Assign" states="awaiting" class="oe_highlight"/>
                        <button name="action_force" string="Force" type="object" states="exception" help="Click this to force the confirmation of the shipment"/>
                        <field name="state"
                            widget="statusbar"
                            statusbar_visible="draft,awaiting,pending,overdue,in_transit,return"
                            statusbar_colors="{&quot;draft&quot;:&quot;blue&quot;,&quot;in_transit&quot;:&quot;green&quot;,&quot;return&quot;:&quot;red&quot;}"/>
                    </header>
                    <sheet>

                        <group colspan="4">
                            <field name="name"/>
                            <field name="transport_unit_id" domain="[('type','=','transport')]"/>
                            <field name="current_burden"/>
                            <field name="date"/>
                            <field name="work_shift"/>
                            <field name="type"/>
                            <field name="zone"/>
                        </group>
                        <notebook>
                            <page string="POS Orders">
                                <field name="pos_order_ids" nolabel="1" widget="many2many" domain="[('delivery','=',True)]" attrs="{'readonly':[('state','not in',('draft',))]}">
                                    <tree>
                                        <field name="name"/>
                                        <field name="pos_reference"/>
                                        <field name="date_order"/>
                                        <field name="partner_id"/>
                                        <field name="user_id"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="freight_shipment_tree" model="ir.ui.view">
            <field name="name">Fleet Shipment Tree</field>
            <field name="model">freight.shipment</field>
            <field name="arch" type="xml">
                <tree string="Fleet Shipments" version="7.0">
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="freight_shipment_action" model="ir.actions.act_window">
            <field name="name">Fleet Shipment Action</field>
            <field name="res_model">freight.shipment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help">Fleet Shipment Action Help</field>
        </record>

        <menuitem 
            id="delivery_main_menu"
            name="Delivery"
            sequence="20"
            />

        <menuitem 
            id="freight_shipment_main_menu"
            name="Fleet Shipment"
            parent="delivery_main_menu"
            sequence="20" 
            />

        <menuitem 
            id="freight_shipment_menu"
            name="Fleet Shipment"
            parent="freight_shipment_main_menu"
            action="freight_shipment_action"
            />

        <record id="pos_order_form_w_delivery" model="ir.ui.view">
            <field name="name">Pos Order Form with Delivery</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="delivery"/>
                    <field name="freight_shipment_id"/>
                    <field name="delivery_address" domain="[('parent_id','=',partner_id)]"/>
                </xpath>
            </field>
        </record>

        <record id="pos_order_tree_w_delivery" model="ir.ui.view">
            <field name="name">Pos Order Tree with Delivery</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='session_id']" position="after">
                    <field name="delivery" string="Delivery"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
